<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/Content/css/styles-login.css" rel="stylesheet" />
    <script src="~/Content/js/JavaScript.js"></script>
</head>
<body>

    <!--Layout para cuando no estoy logueado-->

    <div class="container body-content">
        <!--Header-->
        <header class="p-3 bg-dark text-white fixed">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                    <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                        <img class="bi me-2" width="50" height="50" src="~/imagenes/Logotipo Toernooi.png" />
                    </a>

                    <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                        <li><a href="#" class="nav-link px-2 text-secondary">Home</a></li>
                        <li><a href="#" class="nav-link px-2 text-white">Torneos</a></li>
                        <li><a href="#" class="nav-link px-2 text-white">Partidos</a></li>
                        <li><a href="#" class="nav-link px-2 text-white">Acerca de...</a></li>
                    </ul>

                    <div class="text-end">
                        <a class="btn btn-outline-light me-2" href="@Url.Action("Index","Login",new {Area = "AccesoyRegistro" })">Iniciar sesión</a>
                        <a class="btn btn-primary" href="@Url.Action("Index","Registro",new {Area = "AccesoyRegistro" })">Registrarse</a>
                    </div>
                </div>
            </div>
        </header>

        @RenderBody()
        
    <footer>
        <hr />
        <p>&copy; @DateTime.Now.Year - TOERNOOI</p>
    </footer>
    </div>

    <script src="~/Content/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/lib/popper/umd/popper.min.js"></script>
    <script src="~/Content/lib/jquery/jquery.min.js"></script>
    <script src="~/Content/lib/sweetalert2/sweetalert2.min.js"></script>
   <script src="~/Content/js/Common.js"></script> 
    @RenderSection("scripts", required: false)
</body>
</html>
